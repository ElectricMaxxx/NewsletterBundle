<div class="admin-list-block">
    <div clas="adminInfoBlock">
       <h1>{{ title }}</h1>
       <p>
           {{ message }}
       </p>
    </div>
    <table class="admin-list-table">
        {% for key,h in head %}
            {%  if key == "options" and options.buttons.create  %}
                <th>
                    {{ h.label }} |
                    <a href="{{ path("_email_new") }}">
                        <div class="button">
                            Create New
                        </div>
                    </a>
                </th>
            {% else %}
                <th>{{ h.label }}</th>
            {% endif %}
        {% endfor %}
    </table>
</div>